                const timeElements = document.querySelectorAll('.admin-time-enhanced .small');
                if (timeElements.length >= 2) {
                    timeElements[0].textContent = now.toLocaleDateString('en-US', { 
                        month: 'short', 
                        day: '2-digit', 
                        year: 'numeric' 
                    });
