@model AdminDistributorsViewModel
@{
    ViewData["Title"] = "Distributor Management - Admin";
    Layout = "_AdminLayout";
    var totalDistributors = ViewBag.TotalDistributors as int? ?? 0;
    var activeDistributors = ViewBag.ActiveDistributors as int? ?? 0;
    var inactiveDistributors = ViewBag.InactiveDistributors as int? ?? 0;
}

<div class="admin-distributors-container">
    <!-- Header -->
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-6 fw-bold mb-2">
                    <i class="fas fa-building text-success me-3"></i>Distributor Management
                </h1>
                <p class="text-muted mb-0">Manage distributor network and monitor partnerships</p>
            </div>
            <div class="col-md-4 text-md-end">
                <button class="btn btn-success me-2" onclick="exportDistributors()">
                    <i class="fas fa-download me-1"></i>Export Data
                </button>
                <button class="btn btn-primary" onclick="location.reload()">
                    <i class="fas fa-sync me-1"></i>Refresh
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="stats-card bg-success">
                <div class="stats-content">
                    <div class="stats-icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stats-info">
                        <h3 class="stats-number">@totalDistributors</h3>
                        <p class="stats-label">Total Distributors</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="stats-card bg-primary">
                <div class="stats-content">
                    <div class="stats-icon">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <div class="stats-info">
                        <h3 class="stats-number">@activeDistributors</h3>
                        <p class="stats-label">Active Partners</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="stats-card bg-warning">
                <div class="stats-content">
                    <div class="stats-icon">
                        <i class="fas fa-pause-circle"></i>
                    </div>
                    <div class="stats-info">
                        <h3 class="stats-number">@inactiveDistributors</h3>
                        <p class="stats-label">Inactive Partners</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Distributors Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-list me-2"></i>Distributor Network
                    </h5>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control" id="distributorSearch" placeholder="Search distributors...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Distributors.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Company</th>
                                <th>Contact Person</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Joined</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var distributor in Model.Distributors)
                            {
                                <tr class="distributor-row" data-distributor-id="@distributor.Id">
                                    <td class="fw-bold">#@distributor.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="distributor-avatar me-2">
                                                <i class="fas fa-building fa-2x text-success"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold">@distributor.CompanyName</div>
                                                <small class="text-muted">Distributor</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@distributor.ContactPerson</td>
                                    <td>
                                        <a href="mailto:@distributor.Email" class="text-decoration-none">
                                            @distributor.Email
                                        </a>
                                    </td>
                                    <td>@distributor.Phone</td>
                                    <td>
                                        <span class="badge bg-@(distributor.IsActive ? "success" : "secondary") rounded-pill">
                                            <i class="fas fa-@(distributor.IsActive ? "check" : "times") me-1"></i>
                                            @(distributor.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @distributor.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" 
                                                    onclick="viewDistributor(@distributor.Id)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-info" 
                                                    onclick="viewInventory(@distributor.Id)">
                                                <i class="fas fa-boxes"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-@(distributor.IsActive ? "warning" : "success")" 
                                                    onclick="toggleDistributorStatus(@distributor.Id, @distributor.IsActive.ToString().ToLower())">
                                                <i class="fas fa-@(distributor.IsActive ? "ban" : "check")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-building fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">No distributors found</h5>
                    <p class="text-muted">No distributors have registered yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('distributorSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('.distributor-row');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        function viewDistributor(distributorId) {
            alert(`View distributor details for ID: ${distributorId}`);
        }

        function viewInventory(distributorId) {
            window.open(`/Distributor/Inventory?id=${distributorId}`, '_blank');
        }

        function toggleDistributorStatus(distributorId, isCurrentlyActive) {
            const action = isCurrentlyActive ? 'deactivate' : 'activate';
            
            if (confirm(`Are you sure you want to ${action} this distributor?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("ToggleDistributorStatus", "Admin")';
                
                const csrfToken = document.createElement('input');
                csrfToken.type = 'hidden';
                csrfToken.name = '__RequestVerificationToken';
                csrfToken.value = $('input[name="__RequestVerificationToken"]').val();
                
                const distributorIdInput = document.createElement('input');
                distributorIdInput.type = 'hidden';
                distributorIdInput.name = 'distributorId';
                distributorIdInput.value = distributorId;
                
                const isActiveInput = document.createElement('input');
                isActiveInput.type = 'hidden';
                isActiveInput.name = 'isActive';
                isActiveInput.value = !isCurrentlyActive;
                
                form.appendChild(csrfToken);
                form.appendChild(distributorIdInput);
                form.appendChild(isActiveInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        function exportDistributors() {
            alert('Export functionality coming soon!');
        }
    </script>
}