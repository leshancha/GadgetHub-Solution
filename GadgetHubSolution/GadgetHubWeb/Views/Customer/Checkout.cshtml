@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "_CustomerLayout";
}

<div class="checkout-container">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <h1 class="display-6 fw-bold mb-2">
            <i class="fas fa-credit-card text-primary me-3"></i>Checkout
        </h1>
        <p class="text-muted mb-0">Review your order and complete your purchase</p>
    </div>

    <div class="row">
        <!-- Order Summary -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-shopping-cart text-primary me-2"></i>Order Summary
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.CartItems.Any())
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="d-flex align-items-center py-3 border-bottom">
                                <img src="@(item.ProductImage ?? "/images/placeholder.jpg")" 
                                     alt="@item.ProductName" 
                                     class="me-3" 
                                     style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;">
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-1">@item.ProductName</h6>
                                    <p class="text-muted small mb-0">@item.ProductBrand</p>
                                    <span class="badge bg-light text-dark">Qty: @item.Quantity</span>
                                </div>
                                <div class="text-end">
                                    <h6 class="fw-bold mb-0">$@item.TotalPrice.ToString("N2")</h6>
                                    <small class="text-muted">$@item.Price.ToString("N2") each</small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Delivery Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-truck text-success me-2"></i>Delivery Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="ProcessCheckout" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DeliveryAddress" class="form-label">Delivery Address</label>
                                    <textarea asp-for="DeliveryAddress" class="form-control" rows="3" required></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ContactPhone" class="form-label">Contact Phone</label>
                                    <input asp-for="ContactPhone" type="tel" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="PreferredDeliveryDate" class="form-label">Preferred Delivery Date</label>
                                    <input asp-for="PreferredDeliveryDate" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Special Instructions (Optional)</label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Any special delivery instructions..."></textarea>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Order Total -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm position-sticky" style="top: 20px;">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">Order Total</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span>$@Model.TotalAmount.ToString("N2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span>$@Model.ShippingCost.ToString("N2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tax:</span>
                        <span>$@Model.TaxAmount.ToString("N2")</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong class="text-primary">$@Model.GrandTotal.ToString("N2")</strong>
                    </div>

                    <!-- Payment Options -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Payment Method</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" value="CreditCard" checked>
                            <label class="form-check-label" for="creditCard">
                                <i class="fas fa-credit-card me-1"></i>Credit Card
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="paypal" value="PayPal">
                            <label class="form-check-label" for="paypal">
                                <i class="fab fa-paypal me-1"></i>PayPal
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="bankTransfer" value="BankTransfer">
                            <label class="form-check-label" for="bankTransfer">
                                <i class="fas fa-university me-1"></i>Bank Transfer
                            </label>
                        </div>
                    </div>

                    <button type="button" class="btn btn-primary btn-lg w-100 mb-2" onclick="processCheckout()">
                        <i class="fas fa-lock me-2"></i>Place Order
                    </button>
                    <a href="@Url.Action("Cart", "Customer")" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-arrow-left me-2"></i>Back to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function processCheckout() {
            // Validate form
            const deliveryAddress = document.querySelector('[name="DeliveryAddress"]').value;
            const contactPhone = document.querySelector('[name="ContactPhone"]').value;
            
            if (!deliveryAddress || !contactPhone) {
                alert('Please fill in all required fields');
                return;
            }

            // Show confirmation
            if (confirm('Are you sure you want to place this order?')) {
                // Submit the form or redirect to payment processing
                alert('Order processing functionality will be implemented with payment gateway integration');
                // window.location.href = '@Url.Action("Orders", "Customer")';
            }
        }
    </script>
}