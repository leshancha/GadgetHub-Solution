@model LoginViewModel
@{
    ViewData["Title"] = "Login - Gadget Hub";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="container-fluid">
            <div class="row min-vh-100">
                <!-- Left Side - Branding -->
                <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center bg-gradient-primary">
                    <div class="text-center text-white p-5">
                        <div class="auth-logo mb-4">
                            <i class="fas fa-rocket fa-4x mb-3"></i>
                            <h1 class="display-4 fw-bold">Gadget Hub</h1>
                        </div>
                        <h3 class="mb-4">Welcome Back!</h3>
                        <p class="lead">
                            Sign in to your account and continue your tech shopping journey.
                            Get access to exclusive deals and smart quotation system.
                        </p>
                        <div class="auth-features mt-4">
                            <div class="feature-item mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                Access to 23+ Premium Products
                            </div>
                            <div class="feature-item mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                Smart Quotation System
                            </div>
                            <div class="feature-item mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                Secure & Fast Transactions
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Side - Login Form -->
                <div class="col-lg-6 d-flex align-items-center justify-content-center">
                    <div class="auth-form-container">
                        <div class="auth-form">
                            <div class="text-center mb-4">
                                <div class="d-lg-none mb-3">
                                    <i class="fas fa-rocket fa-2x text-primary"></i>
                                    <h3 class="fw-bold text-primary">Gadget Hub</h3>
                                </div>
                                <h2 class="fw-bold mb-2">Sign In</h2>
                                <p class="text-muted">Enter your credentials to access your account</p>
                            </div>

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            @if (TempData["InfoMessage"] != null)
                            {
                                <div class="alert alert-info alert-dismissible fade show" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            <form asp-controller="Auth" asp-action="Login" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="ReturnUrl" />

                                <div class="form-floating mb-3">
                                    <input asp-for="Email" type="email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" id="email" placeholder="name@example.com" required>
                                    <label for="email"><i class="fas fa-envelope me-2"></i>Email Address</label>
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Password" type="password" class="form-control @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : "")" id="password" placeholder="Password" required>
                                    <label for="password"><i class="fas fa-lock me-2"></i>Password</label>
                                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Remember me</label>
                                    </div>
                                    <a href="#" class="text-decoration-none">Forgot Password?</a>
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill mb-3" id="loginButton">
                                    <span id="loginButtonText">
                                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                    </span>
                                    <span id="loginButtonLoading" class="d-none">
                                        <i class="fas fa-spinner fa-spin me-2"></i>Signing In...
                                    </span>
                                </button>

                                <div class="text-center">
                                    <p class="text-muted mb-3">Don't have an account?</p>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                        <a href="@Url.Action("RegisterCustomer", "Auth")" class="btn btn-outline-primary rounded-pill px-4">
                                            <i class="fas fa-user me-2"></i>Customer Sign Up
                                        </a>
                                        <a href="@Url.Action("RegisterDistributor", "Auth")" class="btn btn-outline-success rounded-pill px-4">
                                            <i class="fas fa-building me-2"></i>Distributor Sign Up
                                        </a>
                                    </div>
                                </div>
                            </form>

                            <div class="auth-footer mt-4">
                                <div class="text-center">
                                    <small class="text-muted">
                                        <i class="fas fa-shield-alt me-1"></i>
                                        Secure login protected by enterprise-grade encryption
                                    </small>
                                    <br>
                                    <small class="text-muted">
                                        <i class="fas fa-code me-1"></i>Built by <strong>leshancha</strong> | 2025-07-31 10:33:01 UTC
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize validation with more lenient settings
            $('form').validate({
                rules: {
                    Email: {
                        required: true,
                        email: true
                    },
                    Password: {
                        required: true,
                        minlength: 1
                    }
                },
                messages: {
                    Email: {
                        required: "Please enter your email address",
                        email: "Please enter a valid email address"
                    },
                    Password: {
                        required: "Please enter your password"
                    }
                },
                errorClass: "text-danger",
                validClass: "text-success",
                errorPlacement: function(error, element) {
                    error.addClass('d-block');
                    element.closest('.form-floating').append(error);
                },
                highlight: function(element) {
                    $(element).addClass('is-invalid').removeClass('is-valid');
                },
                unhighlight: function(element) {
                    $(element).addClass('is-valid').removeClass('is-invalid');
                },
                submitHandler: function(form) {
                    // Debug: Check form values before submit
                    console.log('🔍 Form submit - Email:', $('#email').val(), 'Password length:', $('#password').val().length);
                    showLoginLoading();
                    form.submit();
                }
            });

            // Debug: Log form validation state on blur
            $('#email, #password').on('blur', function() {
                console.log('🔍 Field blur - ', this.id, ':', $(this).val(), 'Valid:', $(this).valid());
            });

            // Demo credentials helper
            $('<div class="demo-credentials mt-3 p-3 bg-light rounded">' +
              '<h6 class="fw-bold">Demo Credentials:</h6>' +
              '<button class="btn btn-sm btn-outline-primary me-2" onclick="fillDemo(\'customer\')">Customer</button>' +
              '<button class="btn btn-sm btn-outline-success me-2" onclick="fillDemo(\'distributor\')">Distributor</button>' +
              '<button class="btn btn-sm btn-outline-danger" onclick="fillDemo(\'admin\')">Admin</button>' +
              '</div>').insertAfter('form');

            // Hide loading state if there was an error (page reloaded)
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                setTimeout(hideLoginLoading, 100);
                </text>
            }
        });

        // Show loading state during login
        function showLoginLoading() {
            const buttonText = document.getElementById('loginButtonText');
            const buttonLoading = document.getElementById('loginButtonLoading');
            const button = document.getElementById('loginButton');
            
            if (buttonText && buttonLoading && button) {
                buttonText.classList.add('d-none');
                buttonLoading.classList.remove('d-none');
                button.disabled = true;
            }
        }

        // Hide loading state (in case of error)
        function hideLoginLoading() {
            const buttonText = document.getElementById('loginButtonText');
            const buttonLoading = document.getElementById('loginButtonLoading');
            const button = document.getElementById('loginButton');
            
            if (buttonText && buttonLoading && button) {
                buttonText.classList.remove('d-none');
                buttonLoading.classList.add('d-none');
                button.disabled = false;
            }
        }

        function fillDemo(type) {
            switch(type) {
                case 'customer':
                    $('#email').val('customer@test.com');
                    $('#password').val('Customer@123');
                    break;
                case 'distributor':
                    $('#email').val('tech@dis.com');
                    $('#password').val('tech123');
                    break;
                case 'admin':
                    $('#email').val('admin@gadgethub.com');
                    $('#password').val('Admin@123');
                    break;
            }
            // Clear any existing validation states
            $('.form-control').removeClass('is-valid is-invalid');
            $('.text-danger').hide();
            
            // Trigger validation
            $('form').valid();
            
            // Debug log
            console.log('🔍 Demo filled - Email:', $('#email').val(), 'Password:', $('#password').val());
        }
    </script>
</body>
</html>