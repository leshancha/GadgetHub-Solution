@using GadgetHubWeb.Models
@model CartViewModel
@{
    ViewData["Title"] = "Shopping Cart - Gadget Hub";
}

<style>
    /* Cart Page Styles - Updated for Quotation-Based System */
    .cart-page {
        font-family: 'Inter', sans-serif;
        color: #1f2937;
    }

    .page-header {
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        border-radius: 0 0 20px 20px;
    }

    .cart-item-card {
        transition: all 0.3s ease;
    }

    .cart-item-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
    }

    .cart-item-card.removing {
        opacity: 0.5;
        pointer-events: none;
    }

    .cart-item-image img {
        max-height: 80px;
        object-fit: cover;
        border-radius: 8px;
    }

    .cart-item-details h6 {
        color: #1f2937;
        font-weight: 700;
    }

    .quotation-info {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .quantity-controls .form-label {
        color: #6b7280;
        font-weight: 600;
    }

    .quantity-controls .form-control {
        max-width: 80px;
        border: 2px solid #e5e7eb;
        font-weight: 600;
        color: #1f2937;
    }

    .quantity-controls .btn {
        border: 2px solid #e5e7eb;
        color: #6b7280;
    }

    .quantity-controls .btn:hover {
        background-color: #3b82f6;
        border-color: #3b82f6;
        color: white;
    }

    .cart-summary .card-header {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .quotation-summary {
        color: #1f2937;
        font-weight: 600;
    }

    .trust-badges h6 {
        color: #1f2937;
    }

    .trust-item {
        color: #6b7280;
        font-weight: 600;
    }

    .empty-cart h2 {
        color: #1f2937;
    }

    .empty-cart .lead {
        color: #6b7280;
    }

    .category-card {
        background: white;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        transition: all 0.3s ease;
        color: #1f2937;
    }

    .category-card:hover {
        border-color: #3b82f6;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.2);
    }

    .category-quick-link {
        text-decoration: none;
        color: inherit;
    }

    .category-quick-link:hover {
        text-decoration: none;
        color: inherit;
    }

    .btn {
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
    }

    .alert {
        border-radius: 12px;
        border: none;
    }

    .alert-info {
        background-color: #dbeafe;
        color: #1e40af;
        border-left: 4px solid #3b82f6;
    }

    .alert-success {
        background-color: #d1fae5;
        color: #065f46;
        border-left: 4px solid #10b981;
    }

    .text-muted {
        color: #6b7280 !important;
    }

    .text-primary {
        color: #3b82f6 !important;
    }

    .text-success {
        color: #10b981 !important;
    }

    .badge {
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .form-control:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
    }
</style>

<!-- Add anti-forgery token for CSRF protection -->
@Html.AntiForgeryToken()

<div class="cart-page">
    <!-- Page Header -->
    <div class="page-header text-white py-4 mb-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-6 fw-bold mb-2">
                        <i class="fas fa-shopping-cart me-3"></i>Quotation Cart
                    </h1>
                    <p class="mb-0">Review your items and request competitive quotations</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="cart-summary-header">
                        <div class="text-white">
                            <span class="badge bg-warning rounded-pill fs-6">@Model.TotalItems Items</span>
                            <br><small>Ready for quotation</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @if (Model.Items.Any())
        {
            <div class="row">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    <div class="cart-items">
                        @foreach (var item in Model.Items)
                        {
                            <div class="cart-item-card mb-3" data-product-id="@item.ProductId">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body p-4">
                                        <div class="row align-items-center">
                                            <!-- Product Image -->
                                            <div class="col-lg-2 col-md-3">
                                                <div class="cart-item-image">
                                                    <img src="@(item.ProductImage ?? "https://via.placeholder.com/120x80?text=Product")"
                                                         alt="@item.ProductName" class="img-fluid rounded">
                                                </div>
                                            </div>

                                            <!-- Product Details -->
                                            <div class="col-lg-5 col-md-5">
                                                <div class="cart-item-details">
                                                    <h6 class="fw-bold mb-1">@item.ProductName</h6>
                                                    @if (!string.IsNullOrEmpty(item.ProductBrand))
                                                    {
                                                        <p class="text-muted small mb-2">Brand: @item.ProductBrand</p>
                                                    }
                                                    <div class="quotation-info">
                                                        <i class="fas fa-file-invoice-dollar me-2"></i>
                                                        Request quote for best price
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Quantity Controls -->
                                            <div class="col-lg-3 col-md-2">
                                                <div class="quantity-controls">
                                                    <label class="form-label small">Quantity:</label>
                                                    <div class="input-group input-group-sm">
                                                        <button class="btn btn-outline-secondary" type="button"
                                                                onclick="updateQuantity(@item.ProductId, @(item.Quantity - 1))">
                                                            <i class="fas fa-minus"></i>
                                                        </button>
                                                        <input type="number" class="form-control text-center"
                                                               value="@item.Quantity" min="1" max="10"
                                                               onchange="updateQuantity(@item.ProductId, this.value)">
                                                        <button class="btn btn-outline-secondary" type="button"
                                                                onclick="updateQuantity(@item.ProductId, @(item.Quantity + 1))">
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Item Actions -->
                                            <div class="col-lg-2 col-md-2">
                                                <div class="cart-item-actions text-end">
                                                    <div class="action-buttons">
                                                        <button class="btn btn-outline-danger btn-sm rounded-pill"
                                                                onclick="removeFromCart(@item.ProductId)"
                                                                data-bs-toggle="tooltip" title="Remove Item">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Quotation Summary -->
                <div class="col-lg-4">
                    <div class="cart-summary sticky-top" style="top: 100px;">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header text-white">
                                <h5 class="mb-0 fw-bold">
                                    <i class="fas fa-file-invoice-dollar me-2"></i>Quotation Summary
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="quotation-summary d-flex justify-content-between mb-3">
                                    <span>Total Items:</span>
                                    <span class="fw-bold">@Model.TotalItems</span>
                                </div>
                                <div class="quotation-summary d-flex justify-content-between mb-3">
                                    <span>Total Quantity:</span>
                                    <span class="fw-bold">@Model.Items.Sum(x => x.Quantity)</span>
                                </div>
                                <div class="quotation-summary d-flex justify-content-between mb-3">
                                    <span>Status:</span>
                                    <span class="badge bg-warning">Ready for Quotation</span>
                                </div>
                                <hr>
                                
                                <!-- Quotation Benefits -->
                                <div class="alert alert-success mb-4">
                                    <h6 class="fw-bold mb-2">
                                        <i class="fas fa-star me-2"></i>Why Request Quotations?
                                    </h6>
                                    <ul class="mb-0 small">
                                        <li>Compare prices from multiple distributors</li>
                                        <li>Get the best possible deals</li>
                                        <li>Negotiate delivery terms</li>
                                        <li>Volume discounts available</li>
                                    </ul>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    @if (Model.IsAuthenticated && Model.UserType == "Customer")
                                    {
                                        <a href="@Url.Action("RequestQuotation", "Customer")" class="btn btn-success btn-lg rounded-pill">
                                            <i class="fas fa-file-invoice-dollar me-2"></i>Request Quotations
                                        </a>
                                        
                                        <small class="text-muted text-center">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Get competitive quotes in 24-48 hours
                                        </small>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Login", "Auth", new { returnUrl = Url.Action("Cart", "Home") })"
                                           class="btn btn-primary btn-lg rounded-pill">
                                            <i class="fas fa-sign-in-alt me-2"></i>Login to Request Quotes
                                        </a>
                                        <div class="alert alert-info mt-3">
                                            <i class="fas fa-info-circle me-2"></i>
                                            <small>Please login to request quotations from distributors</small>
                                        </div>
                                    }
                                </div>

                                <!-- Continue Shopping -->
                                <div class="text-center mt-3">
                                    <a href="@Url.Action("Products", "Home")" class="btn btn-outline-primary rounded-pill">
                                        <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- How It Works -->
                        <div class="card border-0 shadow-sm mt-3">
                            <div class="card-body p-3">
                                <div class="trust-badges text-center">
                                    <h6 class="fw-bold mb-3">How It Works</h6>
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <div class="trust-item">
                                                <i class="fas fa-plus text-primary me-2"></i>
                                                <small>1. Add products to cart</small>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="trust-item">
                                                <i class="fas fa-file-invoice-dollar text-success me-2"></i>
                                                <small>2. Request quotations</small>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="trust-item">
                                                <i class="fas fa-balance-scale text-warning me-2"></i>
                                                <small>3. Compare offers</small>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="trust-item">
                                                <i class="fas fa-handshake text-info me-2"></i>
                                                <small>4. Choose best deal</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Empty Cart -->
            <div class="empty-cart text-center py-5">
                <div class="empty-cart-content">
                    <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
                    <h2 class="fw-bold mb-3">Your Quotation Cart is Empty</h2>
                    <p class="text-muted mb-4 lead">Add products to your cart and request competitive quotes from multiple distributors!</p>

                    <div class="empty-cart-actions">
                        <a href="@Url.Action("Products", "Home")" class="btn btn-primary btn-lg rounded-pill px-5 me-3">
                            <i class="fas fa-search me-2"></i>Browse Products
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-lg rounded-pill px-5">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                    </div>

                    <!-- Featured Categories for Empty Cart -->
                    <div class="featured-categories mt-5">
                        <h5 class="fw-bold mb-3">Popular Categories</h5>
                        <div class="row g-3 justify-content-center">
                            <div class="col-md-2">
                                <a href="@Url.Action("Products", "Home", new { categoryId = 1 })" class="category-quick-link">
                                    <div class="category-card text-center p-3">
                                        <i class="fas fa-mobile-alt fa-2x text-primary mb-2"></i>
                                        <div class="fw-bold">Phones</div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("Products", "Home", new { categoryId = 2 })" class="category-quick-link">
                                    <div class="category-card text-center p-3">
                                        <i class="fas fa-laptop fa-2x text-success mb-2"></i>
                                        <div class="fw-bold">Laptops</div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("Products", "Home", new { categoryId = 3 })" class="category-quick-link">
                                    <div class="category-card text-center p-3">
                                        <i class="fas fa-tablet-alt fa-2x text-warning mb-2"></i>
                                        <div class="fw-bold">Tablets</div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("Products", "Home", new { categoryId = 4 })" class="category-quick-link">
                                    <div class="category-card text-center p-3">
                                        <i class="fas fa-headphones fa-2x text-info mb-2"></i>
                                        <div class="fw-bold">Accessories</div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function updateQuantity(productId, newQuantity) {
            if (newQuantity < 1) {
                if (confirm('Remove this item from cart?')) {
                    removeFromCart(productId);
                }
                return;
            }

            // Send update request
            fetch('@Url.Action("UpdateCartItem", "Home")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: `id=${productId}&quantity=${newQuantity}&__RequestVerificationToken=${$('[name=__RequestVerificationToken]').val()}`
            })
            .then(response => {
                if (response.ok) {
                    location.reload(); // Refresh to show updated totals
                } else {
                    throw new Error('Failed to update quantity');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error updating quantity. Please try again.');
            });
        }

        function removeFromCart(productId) {
            if (!confirm('Are you sure you want to remove this item from your cart?')) {
                return;
            }

            // Show loading state
            const cartItem = $(`.cart-item-card[data-product-id="${productId}"]`);
            cartItem.addClass('removing');

            // Send remove request
            fetch('@Url.Action("RemoveFromCart", "Home")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: `id=${productId}&__RequestVerificationToken=${$('[name=__RequestVerificationToken]').val()}`
            })
            .then(response => {
                if (response.ok) {
                    // Animate removal
                    cartItem.fadeOut(400, function() {
                        location.reload(); // Refresh to show updated cart
                    });
                } else {
                    throw new Error('Failed to remove item');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                cartItem.removeClass('removing');
                alert('Error removing item. Please try again.');
            });
        }

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Auto-save cart changes
        let saveTimeout;
        $('.cart-page input[type="number"]').on('input', function() {
            clearTimeout(saveTimeout);
            const input = this;
            const productId = $(input).closest('.cart-item-card').data('product-id');

            saveTimeout = setTimeout(() => {
                updateQuantity(productId, input.value);
            }, 1500); // Save after 1.5 seconds of no input
        });

        // Console message
        console.log(`
🛒 GADGET HUB QUOTATION CART
============================
Items: @Model.TotalItems
Status: Ready for quotation
============================
Request quotes to get best prices! 💰
        `);
    </script>
}